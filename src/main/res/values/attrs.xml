<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="IconBadgeView">

        <attr
            name="iconBadge_backgroundShape"
            format="enum">

            <enum
                name="circle"
                value="0" />

            <enum
                name="square"
                value="1" />

            <enum
                name="pin"
                value="2" />

        </attr>

        <attr
            name="iconBadge_backgroundShapeColor"
            format="color" />

        <attr
            name="iconBadge_foregroundShape"
            format="enum">

            <enum
                name="arrowUp"
                value="0" />

            <enum
                name="arrowDown"
                value="1" />

        </attr>

        <attr
            name="iconBadge_foregroundShapeColor"
            format="color" />

        <attr
            name="iconBadge_foregroundShapeDrawable"
            format="integer" />

        <attr
            name="iconBadge_number"
            format="integer" />

    </declare-styleable>

</resources>
